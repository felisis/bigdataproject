<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mldl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/mildpink</item>
        <item name="colorPrimaryVariant">@color/mildgrey</item>
        <item name="colorOnPrimary">@color/mildgrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="1">@color/mildpink</item>

        <!-- Customize your theme here. -->


    </style>

    <style name="FullScreen" parent="Theme.Neumorph.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NeumorphismImage">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">300dp</item>
    </style>

    <style name="NeumorphismCard">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">30dp</item>
    </style>


</resources>